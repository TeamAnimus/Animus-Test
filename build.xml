<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- WARNING: Eclipse auto-generated file.
              Any modifications will be overwritten.
              To include a user specific buildfile here, simply create one in the same
              directory with the processing instruction <?eclipse.ant.import?>
			  as the first entry and export the buildfile again. -->
<project basedir="." default="buildrun" name="Animus">
	<property environment="env"/>
    <property name="ECLIPSE_HOME" value="../../Documents/eclipse"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target-version" value="1.7"/>
    <property name="source-version" value="1.7"/>

	<condition property="isWindows">
		<os family="windows"/>
	</condition>
	<condition property="isOSX">
		<and>
			<os family="mac"/>
			<os family="unix"/>
		</and>
	</condition>
	<condition property="isLinux">
		<and>
			<not>
				<os family="mac"/>
			</not>
			<os family="unix"/>
		</and>
	</condition>

	<target name="if_windows" if="isWindows">
		<echo message="Detected Windows"/>
	</target>
	<target name="if_osx" if="isOSX">
		<echo message="Detected Windows"/>
	</target>
	<target name="if_linux" if="isLinux">
		<echo message="Detected Linux"/>
	</target>

	<path id="core.src.path">
		<fileset dir="core/src/">
			<include name="**/*.java"/>
		</fileset>
	</path>
	<path id="desktop.src.path">
		<fileset dir="desktop/src/">
			<include name="**/*.java"/>
		</fileset>
	</path>

	<path id="core.resource.path">
		<fileset dir="core/src/">
			<exclude name="**/*.java"/>
		</fileset>
	</path>
	<path id="desktop.resource.path">
		<fileset dir="desktop/src/">
			<exclude name="**/*.java"/>
		</fileset>
	</path>

	<path id="all.lib.path">
		<fileset dir="lib/bin/all/">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	<path id="core.lib.path">
		<path refid="all.lib.path"/>
		<fileset dir="lib/bin/core/">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	<path id="desktop.lib.path">
		<path refid="all.lib.path"/>
		<fileset dir="lib/bin/desktop/">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<path id="core.classpath">
		<path refid="core.lib.path"/>
		<path refid="desktop.lib.path"/>
		<dirset dir="core">
			<include name="bin"/>
			<include name="bin/**/*"/>
		</dirset>
	</path>
	<path id="desktop.run.classpath">
		<path refid="core.classpath"/>
		<dirset dir="desktop">
			<include name="bin"/>
			<include name="bin/**/*"/>
		</dirset>
	</path>

	<target name="init" depends="init-core, init-desktop"/>
	<target name="init-desktop">
		<mkdir dir="desktop/bin"/>
		<copy includeemptydirs="false" todir="desktop/bin">
			<path refid="desktop.resource.path"/>
		</copy>
	</target>
	<target name="init-core">
		<mkdir dir="core/bin"/>
		<copy includeemptydirs="false" todir="core/bin">
			<path>
				<fileset dir="core/assets">
					<include name="*"/>
				</fileset>
			</path>
		</copy>
		<copy includeemptydirs="false" todir="core/bin">
			<path refid="core.resource.path"/>
		</copy>
	</target>

	<target name="clean" depends="clean-core, clean-desktop"/>
	<target name="clean-core">
		<delete dir="core/bin"/>
	</target>
	<target name="clean-desktop">
		<delete dir="desktop/bin"/>
	</target>

	<target name="buildrun" depends="build, run"/>
    <target name="build" depends="build-project"/>

	<target name="build-project" depends="init, build-core, build-desktop"/>

	<target name="build-core" depends="init-core">
		<echo message="${ant.project.name}: ${ant.file}"/>
		<javac debug="true" debuglevel="${debuglevel}" destdir="core/bin" includeantruntime="false" source="${source-version}" target="${target-version}">
			<src path="core/src"/>
			<classpath refid="core.lib.path"/>
		</javac>
	</target>

	<target name="build-desktop" depends="init-desktop">
		<echo message="${ant.project.name}: ${ant.file}"/>
		<javac debug="true" debuglevel="${debuglevel}" destdir="desktop/bin" includeantruntime="false" source="${source-version}" target="${target-version}">
			<src path="desktop/src"/>
			<classpath refid="core.classpath"/>
		</javac>
	</target>

    <target description="copy Eclipse compiler jars to ant lib directory" name="init-eclipse-compiler">
        <copy todir="${ant.library.dir}">
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </copy>
        <unzip dest="${ant.library.dir}">
            <patternset includes="jdtCompilerAdapter.jar"/>
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </unzip>
    </target>
    <target description="compile project with Eclipse compiler" name="build-eclipse-compiler">
        <property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
        <antcall target="build"/>
    </target>
	<target name="run" depends="run-desktop"/>
	<target name="run-desktop" depends="if_windows, if_linux, if_osx">
        <java classname="com.mygdx.game.desktop.DesktopLauncher" failonerror="true" fork="yes">
            <jvmarg line="-Dorg.lwjgl.opengl.Display.allowSoftwareOpenGL=true"/>
            <classpath refid="desktop.run.classpath"/>
        </java>
    </target>
</project>
